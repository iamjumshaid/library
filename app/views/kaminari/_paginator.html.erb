<%= paginator.render do %>
  <div class="px-4 pb-5">
    <nav class="px-4 flex items-center justify-between sm:px-0">
      <div class="-mt-px w-0 flex-1 flex">
        <% unless current_page.first? %>
          <a href="#" class="border-t-2 border-transparent pt-4 pr-1 inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300">
            <%= solid_icon 'arrow-narrow-left', class: 'w-5 h-5 mr-3 text-gray-400', 'aria-hidden': true %>
            Previous
          </a>
        <% end %>
      </div>
      <div class="hidden md:-mt-px md:flex">
        <% each_page do |page| %>
          <% if page.left_outer? || page.right_outer? || page.inside_window? %>
            <%= page_tag page %>
          <% elsif !page.was_truncated? %>
            <%= gap_tag %>
          <% end %>
        <% end %>
      </div>
      <div class="-mt-px w-0 flex-1 flex justify-end">
        <% unless current_page.last? %>
          <a href="#" class="border-t-2 border-transparent pt-4 pl-1 inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300">
            Next
            <%= solid_icon 'arrow-narrow-right', class: 'w-5 h-5 ml-3 text-gray-400', 'aria-hidden': true %>
          </a>
        <% end %>
      </div>
    </nav>
  </div>
<% end %>