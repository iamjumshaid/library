<%= turbo_frame_tag 'books_suggestion' do %>
  <div class="bg-white px-4 py-5 border-t border-gray-200">
    <h3 class="text-lg leading-6 font-medium text-gray-900">Similar to books you like</h3>
  </div>
  <ul role="list" class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 px-4 pb-5">
    <% books.each do |book| %>
      <li>
        <%= render Book::BookSuggestionComponent.new(book: book) %>
      </li>
    <% end %>
  </ul>
<% end %>