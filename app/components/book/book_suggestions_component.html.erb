<%= turbo_frame_tag 'books_suggestion' do %>
  <ul role="list" class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 px-4 py-5 border-t border-gray-200">
    <% books.each do |book| %>
      <li>
        <%= render Book::BookSuggestionComponent.new(book: book) %>
      </li>
    <% end %>
  </ul>
<% end %>