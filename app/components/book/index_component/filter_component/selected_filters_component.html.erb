<%= form_with(url: url, method: 'get', local: true, html: { data: { controller: identifier, turbo_action: 'advance', turbo_frame: 'outer-frame' } }) do |form| %>
  <% search_params.each do |sp| %>
    <%= form.hidden_field sp, value: params[sp] if params[sp].present? %>
  <% end %>

  <div class="flex-shrink-0">
    <button
      type="submit"
      class="inline-flex items-center rounded-full bg-indigo-50 px-3 py-0.5 text-sm font-medium text-indigo-500 hover:bg-indigo-500 hover:text-white"
    >
      <span><%= params[filter] %></span>
      <svg class="ml-1 h-2 w-2" stroke="currentColor" fill="none" viewBox="0 0 8 8">
        <path stroke-linecap="round" stroke-width="1.5" d="M1 1l6 6m0-6L1 7" />
      </svg>
    </button>
  </div>
<% end %>
