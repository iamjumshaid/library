<div class="my-6 px-4">
  <div class="bg-white py-6 my-6 border-b border-gray-200">
    <h3 class="text-lg leading-6 font-medium text-gray-900">Preview Pages</h3>
  </div>
  <ul role="list" class="grid grid-cols-1 gap-6 sm:grid-cols-3 lg:grid-cols-5">
    <% book.previews.each do |page| %>
      <li class="col-span-1 bg-white rounded-lg shadow divide-y divide-gray-200">
        <%= image_tag page %>
      </li>
    <% end %>
  </ul>
</div>
