<%= render Page::CardComponent.new do |c| %>
  <% c.with_title do %>
    <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate"><%= book.title %></h2>
  <% end %>

  <% c.with_body do %>
    <%= form_with(url: buy_book_path(book.id), method: 'post', local: true) do |form| %>
      <div class="w-full grid grid-cols-1 gap-y-8 gap-x-6 items-start sm:grid-cols-12 lg:gap-x-8">
        <div class="aspect-w-2 aspect-h-2 rounded-lg bg-gray-100 overflow-hidden sm:col-span-2 lg:col-span-3">m/img/ecommerce-images/product-quick-preview-02-detail.jpg" class="object-center object-cover">
          <%= image_tag "book-cover.png", class: 'object-center object-cover' %>
        </div>
        <div class="sm:col-span-8 lg:col-span-7">
          <h2 class="text-2xl font-extrabold text-gray-900 sm:pr-12"><%= book.title %></h2>
          <p class="text-2xl text-gray-900">$12.67</p>

          <p class="text-sm text-gray-500 my-3">
            <%= book.description %>
          </p>
          <div class="text-sm mt-2 text-gray-500">
            <span class="text-sm text-gray-800 font-medium">Author</span>
            <%= book.author.name %>
          </div>
          <div class="text-sm mt-2 text-gray-500">
            <span class="text-sm text-gray-800 font-medium">Publisher</span>
            <%= book.publisher.name %>
          </div>

          <div class="text-sm mt-2 text-gray-500">
            <span class="text-sm text-gray-800 font-medium">No of Pages</span>
            <%= book.no_of_pages%>
          </div>

          <!-- Reviews -->
          <% if average_rating.positive? %>
            <div class="my-6">
              <h4 class="sr-only">Reviews</h4>
              <div class="flex items-center">
                <div class="flex items-center">
                  <% average_rating.times.each do %>
                    <%= solid_icon('star', class: 'text-gray-900 h-5 w-5 flex-shrink-0', 'aria-hidden': 'true') %>
                  <% end %>
                  <% (5-average_rating).times.each do %>
                    <%= solid_icon('star', class: 'text-gray-200 h-5 w-5 flex-shrink-0', 'aria-hidden': 'true') %>
                  <% end %>
                </div>
                <span class="ml-3 text-sm font-medium text-indigo-600 hover:text-indigo-500">Users Rating</span>
              </div>
            </div>
          <% end %>
          <% if purchaseable? %>
            <button type="submit" class="mt-6 w-3/6 border border-transparent rounded-md py-3 px-8 flex items-center justify-center text-base font-medium text-white bg-indigo-500 hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-indigo-500">Buy Now</button>
          <% end %>
        </div>
      </div>
    <% end %>
    <%= render Book::ShowComponent::ReviewComponent.new(book: book) %>
    <%= render Book::ShowComponent::PreviewComponent.new(book: book) %>
  <% end %>
  <% c.with_footer do %>
    <%= turbo_frame_tag 'books_suggestion', src: suggestions_books_path, loading: :lazy do %>
      <%= render Page::LoadingComponent.new %>
    <% end %>

  <% end %>
<% end%>